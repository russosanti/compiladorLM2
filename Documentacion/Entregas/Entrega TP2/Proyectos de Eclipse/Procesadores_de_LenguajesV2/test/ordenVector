
	const TAM : integer = 10;
	var A[TAM] : integer;


procedure PRINCIPAL();
	var i, j : integer;
begin

	{Implementacion de Ordenamiento por burbuja de mayor a menor}
	
	j:=1;
	while (j <= TAM ) do
		i:=0;
		while (i < TAM - 1) do
			if ( a[i] < a[i+1] ) then
				   temp := a[i];
				   a[i] := a[i+1];
				   a[i+1] := temp;
			end-if;
			i := i + 1;
		end-while;
		j := j + 1;	
	end-while;
end-proc;	 
